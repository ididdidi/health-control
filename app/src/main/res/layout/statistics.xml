<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textSize="32sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="8dp"
            android:textColor="@android:color/black"
            android:text="Maximum" />
        <TextView
            android:id="@+id/value_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_max"
            android:layout_marginHorizontal="8dp"
            android:text="MaxValue"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/time_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="8dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:text="Date\ntime"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="8dp"
            android:textColor="@android:color/black"
            android:text="Average" />
        <TextView
            android:id="@+id/value_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_avg"
            android:layout_marginHorizontal="8dp"
            android:text="AvgValue"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/time_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="8dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:text="Date\ntime"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="8dp"
            android:textColor="@android:color/black"
            android:text="Minimum" />
        <TextView
            android:id="@+id/value_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_min"
            android:layout_marginHorizontal="8dp"
            android:text="MinValue"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/time_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="8dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:text="Date\ntime"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>